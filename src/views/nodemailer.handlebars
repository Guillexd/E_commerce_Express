<div class="container">
  <form class="row g-3" action="/api/email" method="post">
    <div class="col-md-12">
      <label for="inputEmail4" class="form-label">To:</label>
      <input type="email" class="form-control" id="inputEmail4" name="email" placeholder="user@gmail.com" />
    </div>
    <div class="col-12">
      <label for="inputAddress" class="form-label">Subject</label>
      <input
        type="text"
        class="form-control"
        id="inputAddress"
        name="subject"
        placeholder="Memorandum"
      />
    </div>
    <div class="mb-3">
      <label for="exampleFormControlTextarea1" class="form-label">Text Body</label>
      <textarea
        class="form-control"
        id="exampleFormControlTextarea1"
        name="text"
        rows="3"
      ></textarea>
    </div>
    <div class="col-12">
      <button type="submit" class="btn btn-primary">Send</button>
    </div>
  </form></div>